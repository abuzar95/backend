// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Category {
  Entrepreneur
  Subcontractor
  SME
  HR
  C_Level
}

enum Source {
  upwork
  linkedin
  clutch
  crunchbase
  producthunt
  glassdoor
  indeed
  others
}

enum Status {
  new
  data_refined
  use_in_campaign
  pitch
  LNC
  B_LNC
  LC
  B_LC
  COMMUNICATION
  TRASH
}

enum UserRole {
  admin
  DC_R
  LH
  EM
}

enum LinkedInConnection {
  none
  invite
  connected
}

enum IntentCategory {
  Individual
  Business
  Both
}

model LinkedInProfile {
  id         String          @id @default(uuid())
  name       String          @unique // e.g. "Sabeeh - CTO"
  niche      IntentCategory? // Individual, Business, Both â€” matches intent category
  created_at DateTime        @default(now())
  updated_at DateTime        @updatedAt

  users      User[]          // Users linked to this profile
  prospects  Prospect[]      // Prospects linked to this profile
}

model User {
  id                   String           @id @default(uuid())
  email                String           @unique
  name                 String?
  password_hash        String?          // Will be used when auth is implemented
  role                 UserRole         @default(DC_R)
  linkedin_profile_id  String?          // Required when role is LH
  created_at           DateTime         @default(now())
  updated_at           DateTime         @updatedAt
  
  linkedin_profile     LinkedInProfile? @relation(fields: [linkedin_profile_id], references: [id])
  prospects            Prospect[]       @relation("ProspectCreator")
  lh_prospects         Prospect[]       @relation("ProspectLH")
  em_prospects         Prospect[]       @relation("ProspectEM")
  
  @@index([email])
  @@index([role])
  @@index([linkedin_profile_id])
}

model Skill {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Prospect {
  id                    String    @id @default(uuid())
  
  // Your defined columns
  category              Category?
  name                  String?
  email                 String?
  company_name          String?
  website_link          String?
  sources               Source?   // Data source
  intent_skills         String[]  // Array of intent skill tags
  intent_category       IntentCategory? // Individual, Business, Both
  intent_proof_link     String?   // Link to proof of intent
  intent_date           DateTime?
  linkedin_connection   LinkedInConnection? @default(none)
  status                Status    @default(new)
  pitch_description     String?
  pitched_source        String?   // linkedin, email, number
  user_id               String
  lh_user_id            String?   // Assigned LH user
  em_user_id            String?   // Assigned EM user
  linkedin_profile_id   String?   // Assigned LinkedIn profile
  about_prospect        String?
  
  // Recommended additional columns
  created_at            DateTime  @default(now())
  updated_at            DateTime  @updatedAt
  last_contacted_at     DateTime?
  next_follow_up_date   DateTime?
  campaign_name         String?
  campaign_added_date   DateTime?
  email_opened          Boolean?  @default(false)
  email_clicked         Boolean?  @default(false)
  email_replied         Boolean?  @default(false)
  priority              String?   // high, medium, low
  lead_score            Int?
  linkedin_url          String?
  data_refined_date     DateTime?
  pitch_date            DateTime?
  pitch_response        String?   // positive, negative, no_response, interested
  job_title             String?
  company_size          String?
  location              String?

  // Relations
  user                  User              @relation("ProspectCreator", fields: [user_id], references: [id], onDelete: Cascade)
  lh_user               User?             @relation("ProspectLH", fields: [lh_user_id], references: [id])
  em_user               User?             @relation("ProspectEM", fields: [em_user_id], references: [id])
  linkedin_profile      LinkedInProfile?  @relation(fields: [linkedin_profile_id], references: [id])

  @@index([user_id])
  @@index([lh_user_id])
  @@index([em_user_id])
  @@index([linkedin_profile_id])
  @@index([status])
  @@index([category])
  @@index([sources])
  @@index([created_at])
}
